<?xml version="1.0"?>
<launch>

    <param name="ai_sim_launched" type="bool" value="true" />

    <!-- Ally1 Simulator AI Node-->
    <group ns="/ally1">

        <arg name="me" value="ally1" />
        <arg name="ally" value="ally2" />

        <node name="ai" pkg="playground" type="ai_node.py" output="screen">
            <remap from="my_state" to="$(arg me)_state" />
            <remap from="ally_state" to="$(arg ally)_state" />
        </node>
    </group>

    <!-- Ally2 Simulator AI Node-->
    <group ns="/ally2">

        <arg name="me" value="ally2" />
        <arg name="ally" value="ally1" />

        <node name="ai" pkg="playground" type="ai_node.py" output="screen">
            <remap from="my_state" to="$(arg me)_state" />
            <remap from="ally_state" to="$(arg ally)_state" />
        </node>
    </group>

</launch>